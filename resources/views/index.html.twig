{% extends "layout.html.twig" %}

{% block title %}
    Latest articles
{% endblock %}

{% block content %}
<div class="container">
    <br>
    
    <h3>Latest articles ({{ total }})</h3>
    <br>
    <div class="row">

        {% for article in articles %}

    <!-- Item -->
    <div class="col-lg-4 col-md-6 col-sm-12">
	<div class="card">
            <img class="card-img-top" src="/uploads/images/full/{{ article.id }}.jpg" alt="{{ article.title }}" />
            <div class="card-body">
                <h4 class="card-title"><a href='{{ path('articles.single', { 'id': article.id }) }}'>{{ article.title }}</a></h4>
                <p class="card-text">{{ article.short_text | raw }}</p> 
                <p>Posted by <a href="#">{{ article.author_name }}</a> on {{ article.date }}</p>
                
                <a href="{{ path('articles.single', { 'id': article.id }) }}" class="btn btn-primary">Read</a> 
            </div>
      </div><br>
    </div>
    <!-- / Item -->
    {% endfor %}

    </div>
    
        {{ pagination | raw }}

</div>
{% endblock %}