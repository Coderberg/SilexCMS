  <a class="navbar-brand" href="{{path('homepage')}}">Site Logo</a>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="{{path('homepage')}}">Home</a>
